function proj(x,y,dmg,flag,targ)
	local c={}
	c.x=x
	c.y=y
	c.dmg=dmg
	c.flag=flag
	c.targ=targ
	
	c.update=function(o) 
		o.y-=3
		
		for e in all(enemies) do
			if coll(o,e) then
				if fget(e.sprt)&o.flag>0 then
					e.dmg(e,o.dmg)
					del(prjctls,o)
				end
			end
		end
	end
	
	c.draw=function(o)
		circfill(o.x,o.y,2,8)
	end
	return c
end

